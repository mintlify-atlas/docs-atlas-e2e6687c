  "keyFeatures": [
    "Better Auth integration with custom user fields and role-based access",
    "Employee and organization dashboards with job applications and metrics",
    "PostgreSQL database with connection pooling and migrations",
    "Job search and filtering system for scientific sector positions",
    "Messaging system for candidate-employer communication",
    "Responsive UI with TailwindCSS and GSAP animations",
    "Waitlist and user registration flows",
    "Salary information and company verification features"
  ],
  "publicApiSurface": [
    "/api/auth/[...all] - Better Auth endpoints",
    "/api/waitlist - Waitlist registration",
    "/api/cron - Scheduled jobs",
    "auth (Better Auth instance)",
    "authClient (Client-side auth)",
    "formatCurrency - CLP currency formatter",
    "formatDate - Date formatting utilities",
    "getBadgeColor - UI badge color mapping",
    "useScrollAnimation - GSAP scroll animation hook"
  ]
